import PySimpleGUI as sg

# Layout definieren
layout = [
    [sg.Text('Gib etwas Text ein:')],
    [sg.InputText(key='-EINGABE-')],  # Eingabefeld
    [sg.Button('OK')]
]

# Fenster erstellen
fenster = sg.Window('Ein einfaches PySimpleGUI Fenster', layout)

# Ereignisschleife
while True:
    event, values = fenster.read()  # Warten auf Benutzerinteraktion
    if event == sg.WINDOW_CLOSED:  # Fenster geschlossen
        break
    if event == 'OK':  # Wenn der Button gedrückt wird
        sg.popup('Du hast eingegeben:', values['-EINGABE-'])  # Popup mit Text anzeigen

# Fenster schließen
fenster.close()
